{
  "$schema": "./devtools.schema.json",
  "watches": [
    {
      "type": "global",
      "symbol": "x"
    },
    {
      "type": "expression",
      "expression": "x + 2"
    },
    {
      "type": "memory",
      "expression": "(u16le)0x7fff,12"
    },
    {
      "type": "global",
      "symbol": "t"
    },
    {
      "type": "expression",
      "expression": "math.cos(x)"
    }
  ],
  "controlSurfaceRoot": [
    {
      "type": "label",
      "label": "t=",
      "expression": "t"
    },
    {
      "type": "knob",
      "label": "Position X",
      "symbol": "x",
      "min": 0,
      "max": 240,
      "step": 1,
      "size": "large"
    },
    {
      "type": "page",
      "label": "Advanced",
      "controls": [
        {
          "type": "toggle",
          "label": "Enable Feature",
          "symbol": "featureEnabled"
        },
        {
          "type": "enumButtons",
          "label": "Mode",
          "symbol": "mode",
          "options": [
            {
              "label": "Easy",
              "value": 0
            },
            {
              "label": "Medium",
              "value": 1
            },
            {
              "label": "Hard",
              "value": 2
            }
          ]
        },
        {
          "type": "label",
          "expression": "t"
        },
        {
          "type": "scope",
          "label": "Scope",
          "series": [
            {
              "expression": "x"
            },
            {
              "expression": "y"
            }
          ]
        },
        {
          "type": "xy",
          "label": "XY",
          "x": {
            "symbol": "x",
            "min": 0,
            "max": 100,
            "step": 1,
            "center": 60
          },
          "y": {
            "symbol": "y",
            "min": 160,
            "max": -30,
            "step": 1,
            "center": 30
          }
        }
      ]
    },
    {
      "type": "page",
      "label": "Main",
      "controls": [
        {
          "type": "triggerButton",
          "label": "do a reset",
          "eval": "reset()"
        },
        {
          "type": "group",
          "label": "Settings",
          "orientation": "vertical",
          "controls": [
            {
              "type": "slider",
              "label": "Volume",
              "symbol": "volume",
              "min": 0,
              "max": 100,
              "step": 1
            },
            {
              "type": "slider",
              "label": "curve",
              "symbol": "curve",
              "min": 0,
              "max": 100,
              "step": 1
            }
          ]
        },
        {
          "type": "tabs",
          "tabs": [
            {
              "label": "Tab 1",
              "controls": [
                {
                  "type": "toggle",
                  "label": "Toggle",
                  "symbol": "enabled"
                },
                {
                  "type": "string",
                  "label": "A string",
                  "symbol": "str"
                }
              ]
            },
            {
              "label": "Tab 2",
              "controls": [
                {
                  "type": "xy",
                  "label": "position",
                  "x": {
                    "symbol": "x",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "center": 80
                  },
                  "y": {
                    "symbol": "y",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "center": 20
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "divider"
    }
  ]
}
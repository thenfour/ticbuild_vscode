{
  "$schema": "./devtools.schema.json",
  "watches": [
    {
      "type": "global",
      "symbol": "x"
    },
    {
      "type": "expression",
      "expression": "x + 2"
    },
    {
      "type": "memory",
      "expression": "(u16le)0x7fff,12"
    },
    {
      "type": "global",
      "symbol": "t"
    },
    {
      "type": "expression",
      "expression": "math.cos(x)"
    }
  ],
  "controlSurfaceRoot": [
    {
      "type": "knob",
      "label": "Position X",
      "symbol": "x",
      "min": 0,
      "max": 240,
      "step": 1,
      "size": "large"
    },
    {
      "type": "page",
      "label": "Advanced",
      "controls": [
        {
          "type": "toggle",
          "label": "Enable Feature",
          "symbol": "featureEnabled"
        },
        {
          "type": "enumButtons",
          "label": "Mode",
          "symbol": "mode",
          "options": [
            {
              "label": "Easy",
              "value": 0
            },
            {
              "label": "Medium",
              "value": 1
            },
            {
              "label": "Hard",
              "value": 2
            }
          ]
        },
        {
          "type": "label",
          "expression": "\"x=\"..x"
        }
      ]
    },
    {
      "type": "page",
      "label": "Main",
      "controls": [
        {
          "type": "triggerButton",
          "label": "do a reset",
          "eval": "reset()"
        },
        {
          "type": "group",
          "label": "Settings",
          "orientation": "vertical",
          "controls": [
            {
              "type": "slider",
              "label": "Volume",
              "symbol": "volume",
              "min": 0,
              "max": 100,
              "step": 1
            },
            {
              "type": "slider",
              "label": "curve",
              "symbol": "curve",
              "min": 0,
              "max": 100,
              "step": 1
            }
          ]
        }
      ]
    },
    {
      "type": "divider"
    },
    {
      "type": "label",
      "label": "",
      "expression": "t"
    }
  ]
}
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "types": [
            "node",
            "vscode"
        ],
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}